<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:id="@+id/RR"
    >
    <android.support.v7.widget.CardView
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:id="@+id/sales"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
    android:id="@+id/R"
   >
    <ImageView
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:id="@+id/imgview"
        android:layout_weight="0.2"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:src="@drawable/product"
       />
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:id="@+id/R1"
        android:layout_weight="0.8"
        android:gravity="center_horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:text="A4 Paper"
            android:textStyle="bold"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sku"
            android:text="SKU : "
            android:layout_below="@+id/name"
            android:layout_marginTop="4dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/skuX"
            android:text="14325"
            android:layout_marginStart="3dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@+id/sku"
            android:layout_below="@+id/name"

            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="4dp"
        android:layout_height="70dp"
        android:background="@drawable/stroke2"
        android:layout_marginBottom="10dp"
       >


    </LinearLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.7"

        >

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/actualprice"
            android:text="Actual Price : "
            android:layout_marginStart="10dp"
           />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/actualpriceX"
            android:text="54"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@+id/actualprice"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/amount"
            android:text="Amout : "
            android:layout_marginStart="10dp"
            android:layout_below="@+id/actualpriceX"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/amountX"
            android:text="10"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@+id/amount"
            android:layout_below="@+id/actualpriceX"/>
    </RelativeLayout>
</LinearLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>